// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  done        Boolean  @default(false)
}

// 添加生成器配置
generator client {
  provider = "prisma-client-js"
}
